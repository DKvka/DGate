{
    "gateway": {
        "port": ":8080"
    },

    "serverpool": [
        {
            "gateway_endpoint": "/hello",
            "name": "hello",
            "destination": "http://127.0.0.1:8331",
            "allow_websocket": false
        },
        {
            "gateway_endpoint": "/echo",
            "name": "echows",
            "destination": "http://127.0.0.1:8333",
            "allow_websocket": true,
            "websock_settings": {
                "websock_endpoint": "/ws",
                "client_timeout": 25,
                "server_timeout": 25
            }
        }
    ]
}
